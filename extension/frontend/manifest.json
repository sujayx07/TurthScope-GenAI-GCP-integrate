{
  "manifest_version": 3,
  "name": "TruthScope",
  "version": "1.1",
  "description": "Analyzes web content for potential misinformation using AI.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "sidePanel",
    "scripting",
    "tabs",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "icons": {
    "16": "icon16.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://127.0.0.1:8080/*",
    "http://127.0.0.1:3000/*",
    "http://127.0.0.1:5009/*",
    "https://truthscope-text-analysis-331314105579.us-central1.run.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "oauth2": {
    "client_id": "331314105579-7vd5pep1l193r635h6jt23dmogrlrrq3.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon16.png",
        "oauth-test.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}